<?xml version="1.0" encoding="utf-8"?>
<extension version="3" type="plugin" group="content" method="upgrade">
<name>vote for articles</name>
<creationDate>24/10/2016</creationDate>
<author>actiaweb</author>
<authorEmail>sandro@actiaweb.com</authorEmail>
<authorUrl>http://www.actiaweb.com/</authorUrl>
<copyright>Copyright 2016</copyright>
<license>License, for example GNU/GPL</license>
<version>4.7</version>
<description>vote for articles</description>
<files>
	<filename plugin="voteforarticles">voteforarticles.php</filename>
	<filename>myvote.php</filename>
	<filename>index.html</filename>
		<folder>language</folder>
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder></files>
<languages>
	<language tag="en-GB">language/en-GB.plg_content_voteforarticles.ini</language>
	<!-- <language tag="fr-FR">language/fr-FR.plg_content_voteforarticles.ini</language> -->
</languages>
<config>
	<fields name="params">
		<fieldset name="basic">
			<field name="firstvote" type="text"
				description="PLG_VOTEFORARTICLES_FIRST_VOTE_ARTICLE"
				label="PLG_VOTEFORARTICLES_FIRST_VOTE_ARTICLE"
			/>
			<field name="alreadyvoted" type="text"
				description="PLG_VOTEFORARTICLES_NO_WAY_ARTICLE"
				label="PLG_VOTEFORARTICLES_NO_WAY_ARTICLE"
			/>
			<field name="thanksmessage" type="text"
				description="PLG_VOTEFORARTICLES_THANKS_ARTICLE"
				label="PLG_VOTEFORARTICLES_THANKS_ARTICLE"
			/>
			<field name="averagerating" type="text"
				description="PLG_VOTEFORARTICLES_AVERAGE_RATING"
				label="PLG_VOTEFORARTICLES_AVERAGE_RATING"
			/>
			<field name="on" type="text"
				description="PLG_VOTEFORARTICLES_ON"
				label="PLG_VOTEFORARTICLES_ON"
			/>
			<field name="numberofvotes" type="text"
				description="PLG_VOTEFORARTICLES_VOTE"
				label="PLG_VOTEFORARTICLES_VOTE"
			/>
		</fieldset>
	</fields>
</config>
</extension>